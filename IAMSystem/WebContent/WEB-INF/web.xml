<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>HelloWorldJSP</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <filter>
    <filter-name>SessionCheckFilter</filter-name>
    <filter-class>pers.zxlin.iam.filter.SessionCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionCheckFilter</filter-name>
    <!--url-pattern>/*</url-pattern-->
    <url-pattern>/main.html</url-pattern> <!-- url from where you implement the filtering -->
  </filter-mapping>
  
  <session-config>  
    <session-timeout>1</session-timeout>  
  </session-config>
  <servlet>
  	<servlet-name>Modifier</servlet-name>
  	<servlet-class>pers.zxlin.iam.servlet.Modifier</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Modifier</servlet-name>
  	<url-pattern>/servModifier</url-pattern>
  </servlet-mapping>
</web-app>